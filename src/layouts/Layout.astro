---
// Supports weights 100-900
import "@fontsource-variable/onest";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/tabler-icons.min.css"
    />
  </head>
  <body
    class="absolute top-0 z-[-2] h-screen w-screen bg-white bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
  >
    <nav class="nav-menu absolute inset-y-0 left-4">
      <div class="h-full flex justify-center items-center">
        <button
          data-collapse-toggle="navbar-default"
          type="button"
          class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-gray-200 hover:text-white dark:hover:bg- dark:focus:ring-gray-600"
          aria-controls="navbar-default"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            class="w-5 h-5"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 17 14"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 1h15M1 7h15M1 13h15"></path>
          </svg>
        </button>
        <div id="navbar-default">
          <ul class="flex flex-col gap-2 items-start">
            <li>
              <a
                href="#inicio"
                class="py-3 px-4 text-zinc-600 rounded-full bg-zinc-200 hover:bg-blue-500 hover:text-white active:bg-blue-500 focus:text-white flex items-center gap-2 focus:bg-blue-500 shadow-xl"
                aria-current="page"
                ><i class="ti ti-home text-2xl"></i><span
                  class="absolute hidden invisible opacity-0 font-medium"
                  >Inicio</span
                ></a
              >
            </li>
            <li>
              <a
                href="#"
                class="py-3 px-4 text-zinc-600 rounded-full bg-zinc-200 hover:bg-blue-500 hover:text-white flex items-center gap-2 shadow-xl"
                ><i class="ti ti-user text-2xl"></i><span
                  class="absolute hidden invisible opacity-0 font-medium"
                  >Acerca de mi</span
                ></a
              >
            </li>
            <li>
              <a
                href="#"
                class="py-3 px-4 text-zinc-600 rounded-full bg-zinc-200 hover:bg-blue-500 hover:text-white flex items-center gap-2 shadow-xl"
                ><i class="ti ti-presentation-analytics text-2xl"></i><span
                  class="absolute hidden invisible opacity-0 font-medium"
                  >Proyectos</span
                ></a
              >
            </li>
            <li>
              <a
                href="#"
                class="py-3 px-4 text-zinc-600 rounded-full bg-zinc-200 hover:bg-blue-500 hover:text-white flex items-center gap-2 shadow-xl"
                ><i class="ti ti-file-cv text-2xl"></i><span
                  class="absolute hidden invisible opacity-0 font-medium"
                  >CV</span
                ></a
              >
            </li>
            <li>
              <a
                href="#"
                class="py-3 px-4 text-zinc-600 rounded-full bg-zinc-200 hover:bg-blue-500 hover:text-white flex items-center gap-2 shadow-xl"
                ><i class="ti ti-mail text-2xl"></i><span
                  class="absolute hidden invisible opacity-0 font-medium"
                  >Contacto</span
                ></a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <slot />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light;
  }
  html {
    font-family: "Onest Variable", sans-serif;
    background: #13151a;
  }

  .nav-menu a:hover span,
  .nav-menu li:hover > a span {
    display: block;
    position: static;
    visibility: visible;
    opacity: 1;
    animation: fade 300ms;
  }

  @keyframes fade {
    0% {
      opacity: 0;
      display: hidden;
    }

    100% {
      opacity: 1;
      display: block;
    }
  }
</style>
