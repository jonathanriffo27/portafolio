---
// Supports weights 100-900
import "@fontsource-variable/onest";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/tabler-icons.min.css"
    />
  </head>
  <body class="text-zinc-700">
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-white bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <nav class="nav-menu fixed inset-y-0 left-4">
      <div class="h-full flex justify-center items-center">
        <button
          data-collapse-toggle="navbar-default"
          type="button"
          class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-gray-200 hover:text-white dark:hover:bg- dark:focus:ring-gray-600"
          aria-controls="navbar-default"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            class="w-5 h-5"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 17 14"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 1h15M1 7h15M1 13h15"></path>
          </svg>
        </button>
        <div id="navbar-default">
          <ul class="flex flex-col gap-2 items-start">
            <li>
              <a
                href="#home"
                class="py-3 px-4 text-white rounded-full bg-blue-500 hover:bg-blue-500 hover:text-white active:bg-blue-500 focus:text-white flex justify-center items-center gap-2 focus:bg-blue-500 shadow-lg"
                aria-current="page"
                ><i class="ti ti-home text-2xl" stroke-width="1"></i><span
                  class="absolute hidden invisible opacity-0 font-medium"
                  >Inicio</span
                ></a
              >
            </li>
            <li>
              <a
                href="#profile"
                class="py-3 px-4 text-zinc-600 rounded-full bg-zinc-200 hover:bg-blue-500 hover:text-white flex items-center gap-2 shadow-lg"
                ><i class="ti ti-user text-2xl" stroke-width="75"></i><span
                  class="absolute hidden invisible opacity-0 font-medium"
                  >Acerca de mi</span
                ></a
              >
            </li>
            <li>
              <a
                href="#"
                class="py-3 px-4 text-zinc-600 rounded-full bg-zinc-200 hover:bg-blue-500 hover:text-white flex items-center gap-2 shadow-lg"
                ><i class="ti ti-presentation-analytics text-2xl"></i><span
                  class="absolute hidden invisible opacity-0 font-medium"
                  >Proyectos</span
                ></a
              >
            </li>
            <li>
              <a
                href="#"
                class="py-3 px-4 text-zinc-600 rounded-full bg-zinc-200 hover:bg-blue-500 hover:text-white flex items-center gap-2 shadow-lg"
                ><i class="ti ti-file-cv text-2xl"></i><span
                  class="absolute hidden invisible opacity-0 font-medium"
                  >CV</span
                ></a
              >
            </li>
            <li>
              <a
                href="#"
                class="py-3 px-4 text-zinc-600 rounded-full bg-zinc-200 hover:bg-blue-500 hover:text-white flex items-center gap-2 shadow-lg"
                ><i class="ti ti-mail text-2xl"></i><span
                  class="absolute hidden invisible opacity-0 font-medium"
                  >Contacto</span
                ></a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <slot />
    <footer
      class="bg-white bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.1),rgba(255,255,255,0))] flex flex-col items-center text-zinc-700"
    >
      <h3 class="text-4xl font-extrabold mt-7">Jonathan Riffo</h3>
      <p class="mt-4 font-light">
        Et aut eum quis fuga eos sunt ipsa nihil. Labore corporis magni eligendi
        fuga maxime saepe commodi placeat.
      </p>
      <div class="flex gap-1 mt-7">
        <a href="#">
          <div
            class="bg-blue-500 rounded-full size-10 flex justify-center items-center"
          >
            <svg
              class="size-4 md:size-5 text-white"
              width="256"
              height="256"
              xmlns="http://www.w3.org/2000/svg"
              preserveAspectRatio="xMidYMid"
              viewBox="0 0 256 256"
              ><path
                d="M218.123 218.127h-37.931v-59.403c0-14.165-.253-32.4-19.728-32.4-19.756 0-22.779 15.434-22.779 31.369v60.43h-37.93V95.967h36.413v16.694h.51a39.907 39.907 0 0 1 35.928-19.733c38.445 0 45.533 25.288 45.533 58.186l-.016 67.013ZM56.955 79.27c-12.157.002-22.014-9.852-22.016-22.009-.002-12.157 9.851-22.014 22.008-22.016 12.157-.003 22.014 9.851 22.016 22.008A22.013 22.013 0 0 1 56.955 79.27m18.966 138.858H37.95V95.967h37.97v122.16ZM237.033.018H18.89C8.58-.098.125 8.161-.001 18.471v219.053c.122 10.315 8.576 18.582 18.89 18.474h218.144c10.336.128 18.823-8.139 18.966-18.474V18.454c-.147-10.33-8.635-18.588-18.966-18.453"
                fill="currentColor"></path></svg
            >
          </div>
        </a>
        <a href="#">
          <div
            class="bg-blue-500 rounded-full size-10 flex justify-center items-center"
          >
            <svg
              class="size-4 md:size-6 text-white"
              width="256"
              height="250"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
              preserveAspectRatio="xMidYMid"
              viewBox="0 0 256 250"
              ><path
                d="M128.001 0C57.317 0 0 57.307 0 128.001c0 56.554 36.676 104.535 87.535 121.46 6.397 1.185 8.746-2.777 8.746-6.158 0-3.052-.12-13.135-.174-23.83-35.61 7.742-43.124-15.103-43.124-15.103-5.823-14.795-14.213-18.73-14.213-18.73-11.613-7.944.876-7.78.876-7.78 12.853.902 19.621 13.19 19.621 13.19 11.417 19.568 29.945 13.911 37.249 10.64 1.149-8.272 4.466-13.92 8.127-17.116-28.431-3.236-58.318-14.212-58.318-63.258 0-13.975 5-25.394 13.188-34.358-1.329-3.224-5.71-16.242 1.24-33.874 0 0 10.749-3.44 35.21 13.121 10.21-2.836 21.16-4.258 32.038-4.307 10.878.049 21.837 1.47 32.066 4.307 24.431-16.56 35.165-13.12 35.165-13.12 6.967 17.63 2.584 30.65 1.255 33.873 8.207 8.964 13.173 20.383 13.173 34.358 0 49.163-29.944 59.988-58.447 63.157 4.591 3.972 8.682 11.762 8.682 23.704 0 17.126-.148 30.91-.148 35.126 0 3.407 2.304 7.398 8.792 6.14C219.37 232.5 256 184.537 256 128.002 256 57.307 198.691 0 128.001 0Zm-80.06 182.34c-.282.636-1.283.827-2.194.39-.929-.417-1.45-1.284-1.15-1.922.276-.655 1.279-.838 2.205-.399.93.418 1.46 1.293 1.139 1.931Zm6.296 5.618c-.61.566-1.804.303-2.614-.591-.837-.892-.994-2.086-.375-2.66.63-.566 1.787-.301 2.626.591.838.903 1 2.088.363 2.66Zm4.32 7.188c-.785.545-2.067.034-2.86-1.104-.784-1.138-.784-2.503.017-3.05.795-.547 2.058-.055 2.861 1.075.782 1.157.782 2.522-.019 3.08Zm7.304 8.325c-.701.774-2.196.566-3.29-.49-1.119-1.032-1.43-2.496-.726-3.27.71-.776 2.213-.558 3.315.49 1.11 1.03 1.45 2.505.701 3.27Zm9.442 2.81c-.31 1.003-1.75 1.459-3.199 1.033-1.448-.439-2.395-1.613-2.103-2.626.301-1.01 1.747-1.484 3.207-1.028 1.446.436 2.396 1.602 2.095 2.622Zm10.744 1.193c.036 1.055-1.193 1.93-2.715 1.95-1.53.034-2.769-.82-2.786-1.86 0-1.065 1.202-1.932 2.733-1.958 1.522-.03 2.768.818 2.768 1.868Zm10.555-.405c.182 1.03-.875 2.088-2.387 2.37-1.485.271-2.861-.365-3.05-1.386-.184-1.056.893-2.114 2.376-2.387 1.514-.263 2.868.356 3.061 1.403Z"
              ></path></svg
            >
          </div>
        </a>
        <a href="#">
          <div
            class="bg-blue-500 rounded-full size-10 flex justify-center items-center"
          >
            <i class="ti ti-mail-filled text-[26px] text-white"></i>
          </div>
        </a>
      </div>
      <div class="my-7">
        &copy; Copyright <strong><span>Jonathan Riffo</span></strong>. All
        Rights Reserved
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light;
  }
  html {
    font-family: "Onest Variable", sans-serif;
    scroll-behavior: smooth;
  }

  .nav-menu a:hover span,
  .nav-menu li:hover > a span {
    display: block;
    position: static;
    visibility: visible;
    opacity: 1;
    animation: fade 300ms;
  }

  @keyframes fade {
    0% {
      opacity: 0;
      display: hidden;
    }

    100% {
      opacity: 1;
      display: block;
    }
  }
</style>
