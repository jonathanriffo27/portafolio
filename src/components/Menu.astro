---

<div class="lg:hidden">
  <button
    id="Menu"
    type="button"
    class="fixed bottom-10 right-10 z-20 bg-blue-500 text-white py-2 px-3 rounded-full hover:scale-110 hover:bg-blue-500/90"
    ><i id="menuButton" class="ti ti-menu-2 text-2xl"></i></button
  >
</div>
<div
  id="opacidad"
  class="fixed bg-black w-screen h-screen z-10 hidden opacity-40 transition-all ease-in-out"
>
</div>

<nav
  id="navbar-default"
  class="h-screen nav-menu fixed inset-y-0 lg:left-4 z-[-1] opacity-0 lg:opacity-100 bg-zinc-200 lg:bg-inherit w-1/2 md:w-1/3 lg:w-fit transition-all ease-in-out"
>
  <div class="h-full flex items-center">
    <div class="w-full ps-6">
      <ul class="flex flex-col gap-2 items-start">
        <li>
          <a
            href="#home"
            class="py-3 px-4 text-zinc-600 rounded-full bg-zinc-200 hover:bg-blue-500 hover:text-white flex items-center gap-2 shadow-lg active"
            aria-current="page"
            ><i class="ti ti-home text-2xl" stroke-width="1"></i><span
              class="absolute hidden invisible opacity-0 font-medium"
              >Inicio</span
            ></a
          >
        </li>
        <li>
          <a
            href="#profile"
            class="py-3 px-4 text-zinc-600 rounded-full bg-zinc-200 hover:bg-blue-500 hover:text-white flex items-center gap-2 shadow-lg"
            ><i class="ti ti-user text-2xl" stroke-width="75"></i><span
              class="absolute hidden invisible opacity-0 font-medium"
              >Acerca de mi</span
            ></a
          >
        </li>
        <li>
          <a
            href="#experience"
            class="py-3 px-4 text-zinc-600 rounded-full bg-zinc-200 hover:bg-blue-500 hover:text-white flex items-center gap-2 shadow-lg"
            ><i class="ti ti-briefcase text-2xl"></i><span
              class="absolute hidden invisible opacity-0 font-medium"
              >Experiencia</span
            ></a
          >
        </li>
        <li>
          <a
            href="#projects"
            class="py-3 px-4 text-zinc-600 rounded-full bg-zinc-200 hover:bg-blue-500 hover:text-white flex items-center gap-2 shadow-lg"
            ><i class="ti ti-presentation-analytics text-2xl"></i><span
              class="absolute hidden invisible opacity-0 font-medium"
              >Proyectos</span
            ></a
          >
        </li>
        <li>
          <a
            href="#contact"
            class="py-3 px-4 text-zinc-600 rounded-full bg-zinc-200 hover:bg-blue-500 hover:text-white flex items-center gap-2 shadow-lg"
            ><i class="ti ti-mail text-2xl"></i><span
              class="absolute hidden invisible opacity-0 font-medium"
              >Contacto</span
            ></a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>
<script>
  const menu = document.getElementById("Menu");
  const menuOpen = document.getElementById("navbar-default");
  const opacidad = document.getElementById("opacidad");
  const menuButton = document.getElementById("menuButton");
  menu.addEventListener("click", () => {
    menuOpen.classList.toggle("opacity-100");
    menuOpen.classList.toggle("verMenu");
    menuOpen.classList.toggle("z-10");
    menuOpen.classList.toggle("z-[-1]");
    menuButton.classList.toggle("ti-menu-2");
    menuButton.classList.toggle("ti-x");
    opacidad.classList.toggle("hidden");
  });
  menuOpen.addEventListener("click", () => {
    menuOpen.classList.remove("opacity-100");
    menuOpen.classList.remove("verMenu");
    menuOpen.classList.toggle("z-10");
    menuOpen.classList.toggle("z-[-1]");
    opacidad.classList.add("hidden");
    menuButton.classList.toggle("ti-menu-2");
    menuButton.classList.toggle("ti-x");
  });
  opacidad.addEventListener("click", () => {
    menuOpen.classList.remove("opacity-100");
    menuOpen.classList.remove("verMenu");
    menuOpen.classList.toggle("z-10");
    menuOpen.classList.toggle("z-[-1]");
    opacidad.classList.add("hidden");
    menuButton.classList.toggle("ti-menu-2");
    menuButton.classList.toggle("ti-x");
  });
</script>

<style>
  .active {
    color: white;
    background-color: #3b82f6;
  }

  .nav-menu a:hover span,
  .nav-menu li:hover > a span {
    display: block;
    position: static;
    visibility: visible;
    opacity: 1;
    animation: fade 300ms;
  }

  .verMenu a span,
  verMenu li > a span {
    display: block;
    position: static;
    visibility: visible;
    opacity: 1;
    animation: fade 300ms;
  }

  @keyframes fade {
    0% {
      opacity: 0;
      display: hidden;
    }

    100% {
      opacity: 1;
      display: block;
    }
  }

  /**
* Mobile Navigation 
*/
  .mobile-nav-toggle {
    position: fixed;
    right: 10px;
    top: 10px;
    z-index: 9998;
    border: 0;
    background: none;
    font-size: 28px;
    transition: all 0.4s;
    outline: none !important;
    line-height: 0;
    cursor: pointer;
    border-radius: 50px;
    padding: 5px;
  }

  .mobile-nav-toggle i {
    color: #45505b;
  }

  .mobile-nav-active {
    overflow: hidden;
  }

  .mobile-nav-active #header {
    left: 0;
  }

  .mobile-nav-active .mobile-nav-toggle {
    color: #fff;
    background-color: #0563bb;
  }

  @media (min-width: 1024px) {
    #navbar-default {
      z-index: 30;
    }
  }
</style>
